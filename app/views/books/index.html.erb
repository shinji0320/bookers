    <% if @book.errors.any? %>
        <%= @book.errors.count %>error
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>

<div class="index">
    <h1>Books</h1>
    <table>
       <thead>
         <tr>
           <th>Title</th>
           <th>Body</th>
           <th colspan="3"></th>
         </tr>
       </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <th><%= book.title %></th>
          <th><%= book.body %></th>
          <th>
            <%= link_to "show", book_path(book.id) %>
            <%= link_to "edit", edit_book_path(book.id) %>
            <%= link_to "destroy", book_path(book.id), method: :delete %>
          </th>
        </tr>
        <% end %>
      </tbody>

    </table>
    <h1>New book</h1>

    <%= form_with model:@book, local:true do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>


      <h4>Body</h4>
      <%= f.text_area :body %>

      <p>
      <%= f.submit 'Create Book' %>
      </p>

    <% end %>
</div>