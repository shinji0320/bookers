    <% if @book.errors.any? %>
        <%= @book.errors.count %>error
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>


<div class="edit">
    <h1>Editing Book</h1>

    <%= form_with model:@book, local: true do |f| %>

      <div class="edit-title">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>

      <div class="deit-body">
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>

      <p>
        <%= f.submit 'Update Book' %>
      </p>
    <% end %>

    <%= link_to "Show", book_path(@book) %>
    <span>|</span>
    <%= link_to "Back", books_path %>
</div>